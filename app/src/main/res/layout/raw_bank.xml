<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewBank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dim_8dp"
    android:layout_marginTop="@dimen/dim_8dp"
    android:layout_marginEnd="@dimen/dim_8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dim_12dp"
    app:cardElevation="@dimen/dim_4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivBank"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="@dimen/dim_4dp"
            android:src="@drawable/ic_bank_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBankName"
            style="@style/TextViewStyleBlackBold20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_16dp"
            android:text="bank name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivBank"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>