<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/dim_16dp"
    android:layout_marginStart="@dimen/dim_16dp"
    android:layout_marginEnd="@dimen/dim_16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMicro"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dim_26dp"
        android:layout_marginBottom="@dimen/dim_26dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextViewStyleBlackBold16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Micro ATM Transactions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearAtmServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/dim_16dp"
                android:layout_marginStart="@dimen/dim_16dp"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_marginEnd="@dimen/dim_8dp"
                    android:layout_marginTop="@dimen/dim_16dp"
                    android:id="@+id/ivAtmWithdrawal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_aeps_tab" />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Withdrawal"
                        style="@style/TextViewStyleGray12sp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dim_16dp"
                    android:id="@+id/ivAtmBalance"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/dim_8dp"
                    android:layout_marginEnd="@dimen/dim_8dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_balanceinfo_tab" />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance Info"
                        style="@style/TextViewStyleGray12sp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dim_16dp"
                    android:id="@+id/ivAtmDeposit"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_deposit" />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deposit"
                        style="@style/TextViewStyleGray12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/dim_16dp"
                android:layout_marginStart="@dimen/dim_16dp"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_marginEnd="@dimen/dim_8dp"
                    android:layout_marginTop="@dimen/dim_26dp"
                    android:id="@+id/ivAtmMiniStatement"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_mini_statement" />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mini Statement"
                        style="@style/TextViewStyleGray12sp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dim_26dp"
                    android:id="@+id/ivAtmResetPin"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/dim_8dp"
                    android:layout_marginEnd="@dimen/dim_8dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_reset_pin" />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset Pin"
                        style="@style/TextViewStyleGray12sp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dim_26dp"
                    android:id="@+id/ivAtmChangePin"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_change_pin" />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Pin"
                        style="@style/TextViewStyleGray12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>