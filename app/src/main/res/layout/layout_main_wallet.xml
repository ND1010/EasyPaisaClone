<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:id="@+id/cardMainWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorGrayL"
        app:cardCornerRadius="@dimen/dim_10dp"
        app:cardElevation="@dimen/dim_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_16dp">

            <ImageView
                android:id="@+id/ivMainWallet"
                android:layout_width="@dimen/dim_50dp"
                android:layout_height="@dimen/dim_50dp"
                android:src="@drawable/ic_nav_wallet"
                app:layout_constraintBottom_toBottomOf="@id/linearLayoutWalletMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/linearLayoutWalletMain" />


            <LinearLayout
                android:id="@+id/linearLayoutWalletMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_20dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/ivMainWallet"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLabelMainWallet"
                    style="@style/TextViewStyleGray14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Main Wallet"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMainWallet"
                    style="@style/TextViewStyleBlackBold20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Rs.120000"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLoadWallet"
                    android:layout_marginTop="@dimen/dim_8dp"
                    style="@style/TextViewStyleWhitebold14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_rounded_blue"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dim_16dp"
                    android:paddingTop="@dimen/dim_4dp"
                    android:paddingEnd="@dimen/dim_16dp"
                    android:paddingBottom="@dimen/dim_4dp"
                    android:text="@string/load_wallet"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLoadWalletUpi"
                    android:layout_marginTop="@dimen/dim_8dp"
                    style="@style/TextViewStyleWhitebold14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_rounded_blue"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dim_16dp"
                    android:paddingTop="@dimen/dim_4dp"
                    android:paddingEnd="@dimen/dim_16dp"
                    android:paddingBottom="@dimen/dim_4dp"
                    android:text="@string/online_load_wallet"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:id="@+id/cardMainAepsWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorGrayL"
        app:cardCornerRadius="@dimen/dim_10dp"
        app:cardElevation="@dimen/dim_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dim_12dp"
        app:layout_constraintTop_toBottomOf="@id/cardMainWallet">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_16dp">

            <ImageView
                android:id="@+id/ivAepsWallet"
                android:layout_width="@dimen/dim_50dp"
                android:layout_height="@dimen/dim_50dp"
                android:src="@drawable/ic_nav_wallet"
                app:layout_constraintBottom_toBottomOf="@id/linearLayoutWalletAeps"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/linearLayoutWalletAeps" />


            <LinearLayout
                android:id="@+id/linearLayoutWalletAeps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_20dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/ivAepsWallet"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLabelAepsWallet"
                    style="@style/TextViewStyleGray14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="AePS Wallet"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAepsWallet"
                    style="@style/TextViewStyleBlackBold20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Rs.120000"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMakeFundReq"
                    style="@style/TextViewStyleWhitebold14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:background="@drawable/drawable_rounded_blue"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/dim_16dp"
                    android:paddingTop="@dimen/dim_4dp"
                    android:paddingEnd="@dimen/dim_16dp"
                    android:paddingBottom="@dimen/dim_4dp"
                    android:text="@string/settlement_request"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:id="@+id/cardMainAccountLedger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorGrayL"
        app:cardCornerRadius="@dimen/dim_10dp"
        app:cardElevation="@dimen/dim_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dim_12dp"
        app:layout_constraintTop_toBottomOf="@id/cardMainAepsWallet">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_16dp">

            <ImageView
                android:id="@+id/ivAepsAccountLedger"
                android:layout_width="@dimen/dim_50dp"
                android:layout_height="@dimen/dim_50dp"
                android:src="@drawable/ic_ledger"
                android:scaleType="fitXY"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="@id/linearLayoutAccountLedger"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/linearLayoutAccountLedger" />


            <LinearLayout
                android:id="@+id/linearLayoutAccountLedger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_20dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/ivAepsAccountLedger"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLabelAccountLedger"
                    style="@style/TextViewStyleGray14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Banking Transaction"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAepsAcLedger"
                    style="@style/TextViewStyleBlackBold20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Account Ledger"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>