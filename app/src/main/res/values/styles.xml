<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <string-array name="devices">
        <item>MANTRA</item>
<!--        <item>MORPHO</item>-->
        <item>TATVIK</item>
        <item>STARTEK</item>
    </string-array>

    <style name="DatePicker" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorBlue</item>

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner.Underlined">
        <item name="overlapAnchor">true</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
    </style>

    <style name="Widget.App.SpinnerBlack" parent="@style/Widget.AppCompat.Spinner.Underlined">
        <item name="overlapAnchor">true</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:backgroundTint">@color/colorBlack</item>
    </style>

    <!--Toolbar-->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme_NoActionBarEasyPaisa">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">@null</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

